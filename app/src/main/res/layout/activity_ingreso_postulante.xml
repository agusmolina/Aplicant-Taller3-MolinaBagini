<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ingreso_postulante">


    <EditText
        android:id="@+id/EditTextNombre"
        android:inputType="textPersonName"
        android:minLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="ingresar nombres" />

    <EditText
        android:id="@+id/EditTextApellido"
        android:inputType="textPersonName"
        android:minLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="ingresar apellidos"/>

    <Spinner
        android:id="@+id/spinnerTipoDocumento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/EditTextDocumento"
        android:inputType="number"
        android:minLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="ingresar documento"/>

    <EditText
        android:id="@+id/EditTextFechaNacimiento"
        android:maxLength="10"
        android:minLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="31/12/1999" />

    <Spinner
        android:id="@+id/spinnerNacionalidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spinnerSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/EditTextTelefono"
        android:inputType="number"
        android:minLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="ingresar telefono"/>

    <EditText
        android:id="@+id/EditTextDireccion"
        android:minLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="ingresar direccion"/>

    <Spinner
        android:id="@+id/spinnerOficio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/ButtonGuardarPostulante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_marginTop="20dp"
        android:text="Guardar" />

</LinearLayout>
